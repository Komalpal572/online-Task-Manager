<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<div style="margin: 20px;">
  <h1>Tasks</h1>
  <%= link_to 'New Task', new_task_path, style: "display: block; margin-bottom: 20px;" %>

  <table style="width:100%; border-collapse: collapse;">
    <thead>
      <tr>
        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Title</th>
        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Due Date</th>
        <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Completed</th>
        <th colspan="3" style="border: 1px solid #ddd; padding: 8px; text-align: left;">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= link_to task.name, task %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= task.due_date %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= task.completed ? 'Yes' : 'No' %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= link_to 'Show', task %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= link_to 'Edit', edit_task_path(task) %></td>
          <td style="border: 1px solid #ddd; padding: 8px;"><%= link_to 'Destroy', task, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>